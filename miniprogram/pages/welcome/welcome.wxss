/* miniprogram/pages/welcom.wxss */

.logo-container{
  margin-top: 60px;
  display: flex;
  flex-direction: column;
}

.logo{
  width: 100px;
  height: 100px;
  box-shadow: 0 0 5px 5px rgba(114, 123, 136,0.1);
}

.slogen-text{
  margin-top: 16px;
  font-size: 16px;
  font-family: PingFangSC-Semibold;
}

.author-container{
  margin-top: 10%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.no-author-container{
  margin-top: 32px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userinfo-avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.author-btn{
  width: 200px;
  height: 44px;
  border-radius: 22px;
  text-align: center;
  background-color: #72E87B;
  box-shadow: 0 0 5px 5px rgba(114, 232, 124, 0.267);
}

.author-text{
  width: 80%;
  margin-top: 16px;
  font-size: 11px;
  font-family: PingFangSC-Regular;
  color:  rgb(114, 123, 136)
}

.rule-text{
  width: 80%;
  margin-top: 16px;
  font-size: 11px;
  font-family: PingFangSC-Regular;
  text-align: center;
  color:  #72E87B
}
