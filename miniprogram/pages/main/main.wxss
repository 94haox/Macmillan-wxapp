/* miniprogram/pages/main/main.wxss */

.header-view{
  width: 100%;
  margin-top:10px; 
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-view-left{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.header-view-right{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 16px;
}

.word-count{
  width: 60px;
  height: 30px;
  border-radius: 15px;
  color: white;
  background-color: #72E87B;
  box-shadow: 0 0 5px 5px rgba(114, 232, 124, 0.267);
}

.word-count-text{
  font-size: 14px;
  font-family: PingFangSC-Regular;
}

.header-view-text{
    color: rgb(114, 123, 136);
    font-size: 14px;
    margin-left: 12px;
    font-family: PingFangSC-Medium;
}

.userinfo-avatar {
  margin-left: 10%;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}


.center-view{
    box-shadow: 0 0 5px 5px rgba(114, 123, 136,0.1);
    border-radius: 10px;
    width: 70%;
    margin-left: 15%;
    height: 700rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start; 
    justify-content: flex-start;
    margin-top: 40px;
}

.word{
    margin-left: 32px;
    margin-top: 32px;
    font-size: 28px;
    font-family: PingFangSC-Semibold
}

.anunce-container{
    margin-top: 16px;
    display: inline-flex;
    align-items: center; 
    justify-content: center;
}

.voice-icon{
    width: 32px;
    height: 32px;
    margin-left: 6px;
}

.anunce{
    margin-left: 32px;
    font-size: 16px;
    color: RGB(202,202,202);
}

.means{
    width: 100%;
    height: 50%;
    margin-top: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    color: RGB(202,202,202);
}

.means-text{
  width: 80%;
  text-align: center;
}

.bottom-view{
    display: flex;
    margin-top: 50px;
    justify-content: space-around;
}

.forget-btn{
    background:white;
    color: rgb(114, 123, 136);
    width: 100px;
    height: 40px;
    border-radius: 20px;
    box-shadow: 0 0 5px 5px rgba(114, 123, 136,0.1);
}

.confirm-btn{
    background: #72E87B;
    color: white;
    width: 100px;
    height: 40px;
    border-radius: 20px;
    box-shadow: 0 0 5px 5px rgba(114, 232, 124, 0.247);
}